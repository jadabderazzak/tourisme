{% extends 'base.html.twig' %}

{% block title %}Blog
{% endblock %}

{% block body %}

	<div class="max-w-screen-xl mx-auto  relative">
		<div class="bg-cover bg-no-repeat bg-center text-center overflow-hidden " style="min-height: 500px; background-image: url('{{ asset('template/images/blog.jpg')}}')" title="Woman holding a mug"></div>
		<div class="w-full mx-auto flex justify-between gap-6 flex-col md:flex-row">
			<div class="mt-3 mb-10 w-full md:w-[70%] bg-white rounded-b lg:rounded-b-none lg:rounded-r flex flex-col justify-between leading-normal">
				<div class="bg-white relative top-0 -mt-32 p-5 sm:p-10 shadow-md border-t-2 rounded-lg">
					<h1 href="#" class="text-gray-900 text-center font-bold text-lg md:text-2xl mb-2">{{ blog.title | raw | capitalize}}</h1>
					<p class="text-gray-700 text-xs mt-2 text-right">
						<span class="text-gray-600 font-medium hover:text-gray-900 transition duration-500 ease-in-out">
							{% set locale = app.request.locale %}
						{{ blog.createdAt | ago(locale=locale) }}
						</span>


					</p>

					<p class=" text-sm leading-8 my-5">
						{% if blog.video != "" %}
							<div class="relative">
								<iframe class="w-full h-96" src="{{ blog.video | raw }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
							</div>
						{% endif %}
						{% if blog.image != "" %}
						{% set link = "template/uploadsAll/" ~ blog.image  %}
							<div class="relative mt-6">
								<img class="h-auto max-w-full rounded-lg" src="{{ asset(link) }}" alt="">
							</div>
						{% endif %}
						<div class="mt-6 text-lg font-light">
							{{ blog.description | raw | capitalize}}
						</div>
					</p>


					<div class="flex items-center justify-end gap-6 mt-6">
						<a class="text-gray-700 hover:text-orange-600" aria-label="Visit TrendyMinds LinkedIn" href="https://www.linkedin.com/sharing/share-offsite/?url={{ app.request.uri }}" target="_blank">
							<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 448 512" class="h-6">
								<path fill="currentColor" d="M100.28 448H7.4V148.9h92.88zM53.79 108.1C24.09 108.1 0 83.5 0 53.8a53.79 53.79 0 0 1 107.58 0c0 29.7-24.1 54.3-53.79 54.3zM447.9 448h-92.68V302.4c0-34.7-.7-79.2-48.29-79.2-48.29 0-55.69 37.7-55.69 76.7V448h-92.78V148.9h89.08v40.8h1.3c12.4-23.5 42.69-48.3 87.88-48.3 94 0 111.28 61.9 111.28 142.3V448z"></path>
							</svg>
						</a>

						<a class="text-gray-700 hover:text-orange-600" aria-label="Visit TrendyMinds Facebook" href="https://www.facebook.com/sharer/sharer.php?u={{ app.request.uri }}" target="_blank">
							<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 320 512" class="h-6">
								<path fill="currentColor" d="m279.14 288 14.22-92.66h-88.91v-60.13c0-25.35 12.42-50.06 52.24-50.06h40.42V6.26S260.43 0 225.36 0c-73.22 0-121.08 44.38-121.08 124.72v70.62H22.89V288h81.39v224h100.17V288z"></path>
							</svg>
						</a>

						<a class="text-gray-700 hover:text-orange-600" aria-label="Visit TrendyMinds Twitter" href="https://twitter.com/intent/tweet?url={{ app.request.uri }}" target="_blank">
							<svg class="h-6" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 512 512">
								<path fill="currentColor" d="M459.37 151.716c.325 4.548.325 9.097.325 13.645 0 138.72-105.583 298.558-298.558 298.558-59.452 0-114.68-17.219-161.137-47.106 8.447.974 16.568 1.299 25.34 1.299 49.055 0 94.213-16.568 130.274-44.832-46.132-.975-84.792-31.188-98.112-72.772 6.498.974 12.995 1.624 19.818 1.624 9.421 0 18.843-1.3 27.614-3.573-48.081-9.747-84.143-51.98-84.143-102.985v-1.299c13.969 7.797 30.214 12.67 47.431 13.319-28.264-18.843-46.781-51.005-46.781-87.391 0-19.492 5.197-37.36 14.294-52.954 51.655 63.675 129.3 105.258 216.365 109.807-1.624-7.797-2.599-15.918-2.599-24.04 0-57.828 46.782-104.934 104.934-104.934 30.213 0 57.502 12.67 76.67 33.137 23.715-4.548 46.456-13.32 66.599-25.34-7.798 24.366-24.366 44.833-46.132 57.827 21.117-2.273 41.584-8.122 60.426-16.243-14.292 20.791-32.161 39.308-52.628 54.253z"></path>
							</svg>
						</a>
					</div>

					<h1 href="#" class="text-gray-900 text-center font-bold text-md md:text-xl mb-2 mt-4 ">{{"Laissez un commentaire" | trans}}</h1>


					<p class=" text-sm leading-8 my-5">
						{{ form_start(form, { 'attr': {  dir: dirs }}) }}


						<div class="relative z-0 w-full mb-5 group">
							{{ form_widget(form.nom, {'attr': {'class': 'block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-orange-500 peer'}}) }}
							<span class="text-sm text-red-700">{{ form_errors(form.nom) }}</span>
							<label for="floating_email" class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-orange-500 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6"></label>
						</div>
						<div class="relative z-0 w-full mb-5 group">
							{{ form_widget(form.email, {'attr': {'class': 'block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-orange-500 peer'}}) }}
							<span class="text-sm text-red-700">{{ form_errors(form.email) }}</span>
							<label for="floating_email" class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-orange-500 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6"></label>
						</div>

						<div class="relative z-0 w-full mb-5 group">
							{{ form_widget(form.website, {'attr': {'class': 'block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-orange-500 peer'}}) }}
							<span class="text-sm text-red-700">{{ form_errors(form.website) }}</span>
							<label for="floating_email" class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-orange-500 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6"></label>
						</div>

						<div class="relative z-0 w-full mb-5 group">
							{{ form_widget(form.commentaire, {'attr': {'class': 'block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-orange-500 peer', 'rows': 8}}) }}
							<span class="text-sm text-red-700">{{ form_errors(form.commentaire) }}</span>
							<label for="floating_email" class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-orange-500 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6"></label>
						</div>


						<div class="relative mb-4 text-right" data-te-input-wrapper-init>
							<button type="submit" class="text-white  bg-orange-500 border-0 py-2 px-4 focus:outline-none hover:bg-orange-400 rounded-sm text-lg">{{"Soumettre" | trans}}</button>
						</div>


						{{ form_end(form)}}
					</p>


				</div>


			</div>

			<div class="mt-32 p-4 w-full md:w-[30%] bg-white rounded-b lg:rounded-b-none lg:rounded-r flex flex-col justify-between leading-normal">
				<div class="bg-gray-50 relative top-0 -mt-32 p-5 sm:p-10 shadow-md">
					<h1 href="#" class="text-gray-900 text-center font-bold text-md md:text-xl mb-6">
						{{"Posts r√©cents" | trans}}
					</h1>

					{% for blog in blogs %}
						<p class=" leading-8 my-3 border-t-2 border-gray-50 mb-2">
							<a href="{{ path('page_blog_read', {slug : blog.slug} )}}" class="text-md text-gray-600 font-normal">{{ blog.title | raw | u.truncate(50,'...')}}</a>
						</p>
					{% endfor %}


				</div>


			</div>
		</div>

	</div>

{% endblock %}
