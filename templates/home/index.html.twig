} %}{% endblock %}{% block javascripts %}{{ parent()}}<script>


document.addEventListener("DOMContentLoaded", function () {
const textElement = document.getElementById('dynamic-text');
const words = {{ categories_name | raw }};
let index = 0;

function changeText() { // Ajoute la classe de transition Tailwind CSS
textElement.classList.add('transition-opacity', 'duration-500', 'opacity-0');

// Attendre que la transition commence
setTimeout(function () { // Change le texte
textElement.textContent = words[index];
// Retire la classe d'opacité pour montrer le texte
textElement.classList.remove('opacity-0');
// Augmente l'index pour afficher le mot suivant
index = (index + 1) % words.length;
}, 250);
// la moitié de la durée de la transition

// Supprimer la classe de transition après la transition est complète
setTimeout(function () {
textElement.classList.remove('transition-opacity', 'duration-500');
}, 500); // la durée de la transition
}

// Change le texte immédiatement puis toutes les 3 secondes
changeText();
setInterval(changeText, 3000);
});</script>{% endblock %}
