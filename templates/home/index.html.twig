{% extends 'base.html.twig' %}

{% block body %}

	<style>
		.font-arial {
			font-family: 'Poppins', sans-serif;
		}
	</style>

	<div class="flex w-full h-[600px] md:h-screen ">
		
		<div
			class="w-full md:w-1/2 h-full flex mt-12 md:mt-0  md:items-center justify-center border-b-2 border-gray-100">
			<!-- Contenu de la première div gauche -->
			
			<div class="text-center text-white px-6 md:py-0 md:px-16 ">
				<h1 class="mb-4 md:mb-8 text-4xl font-extrabold text-gray-600 text-left md:text-6xl font-arial tracking-widest">TROUVEZ DES
					<span class="text-transparent bg-clip-text bg-gradient-to-r to-blue-600 from-orange-400 animate-pulse tracking-widest">
						ENDROITS
					</span>
					<span class="tracking-widest">PRÈS DE CHEZ VOUS</span>
				</h1>

				<p class="text-lg font-normal text-gray-900  text-left">
					<span class="inline-block border-b-2 border-orange-500">Découvrez Souss Massa</span>: Un voyage à travers la splendeur naturelle et le riche patrimoine.</p>
			</span>
		</p>
		<!-- ************ Card for search -->


		<div class="w-full mt-6 p-4 bg-white border rounded-lg shadow-md shadow-gray-300 sm:p-6 md:p-8 ">
		
			<form class="space-y-6" action="#">
				<div class="grid gap-3  md:grid-cols-2">

					<div>

						<div class="relative mb-3">
							<div class="absolute inset-y-0 start-0 flex items-center ps-3.5 pointer-events-none">
								<svg class="w-5 h-5 text-gray-500 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewbox="0 0 24 24">
									<path fill-rule="evenodd" d="M11.906 1.994a8.002 8.002 0 0 1 8.09 8.421 7.996 7.996 0 0 1-1.297 3.957.996.996 0 0 1-.133.204l-.108.129c-.178.243-.37.477-.573.699l-5.112 6.224a1 1 0 0 1-1.545 0L5.982 15.26l-.002-.002a18.146 18.146 0 0 1-.309-.38l-.133-.163a.999.999 0 0 1-.13-.202 7.995 7.995 0 0 1 6.498-12.518ZM15 9.997a3 3 0 1 1-5.999 0 3 3 0 0 1 5.999 0Z" clip-rule="evenodd"/>
								</svg>

							</div>
							<input type="text" id="input-group-1" class="border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-orange-500 focus:border-orange-500 block w-full ps-10 p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Destination">
						</div>
					</div>
					<div>

						<div class="relative mb-3">
							<div class="absolute inset-y-0 start-0 flex items-center ps-3.5 pointer-events-none">
								<svg class="w-5 h-5 text-gray-500 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewbox="0 0 24 24">
									<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 6h8M6 10h12M8 14h8M6 18h12"/>
								</svg>

							</div>
							<input type="text" id="input-group-1" class="border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-orange-500 focus:border-orange-500  block w-full ps-10 p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Categories">
						</div>
					</div>
					<div>

						<div class="relative mb-3">
							<div class="absolute inset-y-0 start-0 flex items-center ps-3.5 pointer-events-none">
								<svg class="w-5 h-5 text-gray-500 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewbox="0 0 24 24">
									<path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="m21 21-3.5-3.5M17 10a7 7 0 1 1-14 0 7 7 0 0 1 14 0Z"/>
								</svg>


							</div>
							<input type="text" id="input-group-1" class="border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-orange-500 focus:border-orange-500  block w-full ps-10 p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Keyword">
						</div>
					</div>
					<div>
						<button type="button" class="text-white h-11 w-full justify-center bg-orange-500  hover:bg-[#F7BE38]/90 focus:ring-4 focus:outline-none focus:ring-[#F7BE38]/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:focus:ring-[#F7BE38]/50 me-2 mb-2">
							<svg class="w-5 h-5 text-white dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewbox="0 0 24 24">
								<path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="m21 21-3.5-3.5M17 10a7 7 0 1 1-14 0 7 7 0 0 1 14 0Z"/>
							</svg>

							<span class="text-lg">&nbsp;Search</span>
						</button>
					</div>
				</div>

			</form>
		</div>


		<!-- ************************************** -->
	</div>
</div>
<div class="hidden md:block w-1/2 h-full bg-green-500 flex items-center justify-center bg-no-repeat bg-cover bg-center" style="background-image: url('{{ asset('template/images/back.jpg') }}'); "></div></div>
{% include "components/categories.html.twig" with {
		'categories' : categories
}
%}

{% include "components/places.html.twig" with {
