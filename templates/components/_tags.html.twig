{% set locale = app.request.locale %}
<div class="py-4 md:py-0 mx-6 md:mx-16 mb-6 md:mt-16">
	<div class="w-full mx-auto">
		<h1 class="text-xl text-left font-bold leading-none tracking-tight text-gray-900 md:text-3xl mb-6">
			{{"Th√©matiques" | trans}}
		</h1>
		<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-3 w-full" dir={{dirs}}>
			{% for tag in tags %}
				{% set nm = tag.nom | raw %}
				{% set txtPos = "text-left" %}
				{% if locale == 'ar' %}
					{% set nm = tag.ar | raw  %}
					{% set txtPos = "text-right" %}
				{% elseif locale == 'en'%}
					{% set nm = tag.en | raw  %}
				{% endif %}
				<a href="{{ app.request.uri }}?search[query]={{tag.nom | raw }}&queryId=&search[categorie]=&search[ville]=">
					<div class="rounded-xl group p-3 text-left bg-gradient-to-r from-blue-800 to-blue-900 text-white ">

						<div class="flex flex-row justify-center items-center gap-3">

							<svg class="h-5 w-5 text-white dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewbox="0 0 24 24">
								<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.122 17.645a7.185 7.185 0 0 1-2.656 2.495 7.06 7.06 0 0 1-3.52.853 6.617 6.617 0 0 1-3.306-.718 6.73 6.73 0 0 1-2.54-2.266c-2.672-4.57.287-8.846.887-9.668A4.448 4.448 0 0 0 8.07 6.31 4.49 4.49 0 0 0 7.997 4c1.284.965 6.43 3.258 5.525 10.631 1.496-1.136 2.7-3.046 2.846-6.216 1.43 1.061 3.985 5.462 1.754 9.23Z"/>
							</svg>

							<h3 class="text-sm font-bold {{txtPos}} w-full  ">

								{{ nm}}

							</h3>
						</div>

					</div>
				</a>
			{% endfor %}
		</div>
	</div>
</div>
