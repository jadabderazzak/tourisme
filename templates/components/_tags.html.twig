
{% set locale = app.request.locale %}
<div class=" text-white  py-4 md:py-0 mx-6 md:mx-16 mb-6 ">
	<div class="w-full mx-auto">
		<div class="flex flex-row justify-between items-center w-full mt-8 md:mt-16 ">
			<div class="mb-3 ">
				<h1 class="text-xl text-center font-bold  leading-none tracking-tight text-gray-900 md:text-3xl">

				{{"Th√©matiques" | trans}}

				</h1>
			</div>
			
		</div>


		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 ">
				{% for tag in tags %}
			{% set nm = tag.nom | raw %}
				{% set txtPos = "text-left" %}
				{% if locale == 'ar' %}
					{% set nm = tag.ar | raw  %}
					{% set txtPos = "text-right" %}
				{% elseif locale == 'en'%}
					{% set nm = tag.en | raw  %}
				{% endif %}

				{% set chemin = "template/img/" ~ tag.slug ~ ".jpg" %}
				<div class="relative h-[300px]">
					<a href="{{ app.request.uri }}?search[query]={{tag.nom | raw }}&queryId=&search[categorie]=&search[ville]=">
					<img class=" h-full w-full object-cover group-hover:scale-105 transition-transform duration-500 ease-in-out" loading="lazy" src="{{ asset(chemin)}}" alt="">
					<div class="absolute bottom-0 left-0 right-0 bg-black/30 backdrop-blur-md p-4">
						<p class="text-white text-center text-xl">{{ nm | raw  | upper}}</p>
					</div>
					</a>
				</div>
			{% endfor %}

		</div>
	</div>
</div>
